<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projetos.agendacontato.ActContato">

    <EditText
        android:id="@+id/edtPesquisa"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAdicionar"
        android:layout_width="78dp"
        android:layout_height="45dp"
        android:onClick="onClick"
        android:text="Add"
        app:layout_constraintBottom_toTopOf="@+id/lstContatos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toEndOf="@+id/edtPesquisa"
        app:layout_constraintTop_toTopOf="@+id/edtPesquisa"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/lstContatos"
        android:layout_width="352dp"
        android:layout_height="447dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnAdicionar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtPesquisa"
        app:layout_constraintTop_toBottomOf="@+id/edtPesquisa"
        app:layout_constraintVertical_bias="0.571" />
</android.support.constraint.ConstraintLayout>
